{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Wryft",
  "version": "0.1.0",
  "identifier": "com.wryft.app",
  "build": {
    "frontendDist": "../wryft-web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "",
    "beforeBuildCommand": "cd ../wryft-web && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Wryft",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
